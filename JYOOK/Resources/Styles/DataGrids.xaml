<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#5cb6ff"/>
    
    
    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="VerticalGridLinesBrush" Value="LightGray"/>
        <Setter Property="HorizontalGridLinesBrush" Value="LightGray"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style x:Key="editableCellStyle" TargetType="{x:Type DataGridCell}">
        <Setter Property="Background" Value="#ffce73"/>
    </Style>

    <Style x:Key="hilightCellStyle" TargetType="{x:Type DataGridCell}">
        <Setter Property="Background" Value="{StaticResource positiveColorLight}"/>
    </Style>
    
</ResourceDictionary>
    